@{
    Layout = null;
}
<div class="container">
    <div class="row">
        <h1 class="text-center">Login</h1>
        <div class="col-lg-5 col-sm-5 col-5 form form-center well">
            <form name="loginForm" class="form-horizontal" ng-submit="login()">
                <div class="form-group" ng-class="{error:loginForm.Email.$invalid}">
                    <label class="col-lg-2 control-label" for="Email">Email:</label>
                    <div class="col-lg-12">
                        <input class="form-control" type="email" ng-model="Email" id="Email" name="Email" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label" for="Password">Password:</label>
                    <div class="col-lg-12">
                        <input class="form-control" type="password" ng-model="Password" name="Password" id="Password" required />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-2">
                        <button ng-disabled="loginForm.$invalid" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-user"></span>&nbsp;Login</button>
                    </div>
                </div>

                <p>
                    <a href="/#register">No login? Register now....</a>
                </p>
            </form>
        </div>
    </div>
</div>
